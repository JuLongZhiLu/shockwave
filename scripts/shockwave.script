-- shockwave.script
function init(self)
	-- 初始状态：极小且完全透明
	go.set("#sprite", "tint.w", 1)
	go.set_scale(vmath.vector3(0.1, 0.1, 1))

	-- 1. 快速变大
	go.animate(".", "scale", go.PLAYBACK_ONCE_FORWARD, vmath.vector3(2.5, 2.5, 1), go.EASING_OUTQUAD, 0.4)

	-- 2. 同时颜色变淡（消失）
	go.animate("#sprite", "tint.w", go.PLAYBACK_ONCE_FORWARD, 0, go.EASING_OUTQUAD, 0.4, 0, function()
		go.delete() -- 动画结束销毁自己
	end)
end